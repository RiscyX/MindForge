<?xml version="1.0"?>
<ruleset name="MindForge">
    <description>MindForge / CakePHP coding standard</description>

    <file>src</file>

    <rule ref="./vendor/cakephp/cakephp-codesniffer/CakePHP/ruleset.xml">
        <!-- Keep CS checks, but don't block commits on mandatory docblocks/type-hints -->
        <exclude name="CakePHP.Commenting.FunctionComment.Missing"/>
        <exclude name="SlevomatCodingStandard.TypeHints.ParameterTypeHint.MissingAnyTypeHint"/>
        <exclude name="SlevomatCodingStandard.TypeHints.ReturnTypeHint.MissingAnyTypeHint"/>
    </rule>

</ruleset>
